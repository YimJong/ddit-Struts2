<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
    <sqlMap namespace = "fileItem">
		<typeAlias alias="fileItemVO" type="kr.or.ddit.vo.FileItemVO"/>
		<typeAlias alias="boardVO" type="kr.or.ddit.vo.BoardVO"/>
		
		<!-- 동미 -->
		<statement id="datafileitemList" resultClass="fileItemVO">
			SELECT * 
			FROM FILEITEM
			WHERE BOARD_NO = #board_no#
		</statement>
		
			<insert id="datainsertFileItem" parameterClass="fileItemVO">
				<selectKey keyProperty="file_no">
					SELECT FILEITEM_SEQ.NEXTVAL FILE_SEQ FROM DUAL 
				</selectKey>			
				INSERT INTO FILEITEM(FILE_NO
									,BOARD_INDEX
									,BOARD_NO
									,FILE_NAME
									,FILE_SAVE_NAME
									,FILE_TYPE)
							VALUES(#file_no#
								   ,'3'
								   ,#board_no#
								   ,#file_name#
								   ,#file_save_name#
								   ,#file_type#)
			</insert>
			
			
			<select id="fileitemInfo" parameterClass="map" resultClass="fileItemVO">
				SELECT * 
				FROM FILEITEM
				WHERE FILE_NO = #file_no#
			</select>
			
			<insert id="noticeinsertFileItem" parameterClass="fileItemVO">
				<selectKey keyProperty="file_no">
					SELECT FILEITEM_SEQ.NEXTVAL FILE_SEQ FROM DUAL 
				</selectKey>			
				INSERT INTO FILEITEM(FILE_NO
									,BOARD_INDEX
									,BOARD_NO
									,FILE_NAME
									,FILE_SAVE_NAME
									,FILE_TYPE)
							VALUES(#file_no#
								   ,'2'
								   ,#board_no#
								   ,#file_name#
								   ,#file_save_name#
								   ,#file_type#)
			</insert>
			
			
			
	<!-- 종원 -->
   <select id="imageboardFileitemInfo" parameterClass="boardVO" resultClass="fileItemVO">
      SELECT *
        FROM FILEITEM
       WHERE BOARD_INDEX = '5'
         AND BOARD_NO = #board_no#
   </select>
   
   
   <insert id="insertImageboardFile" parameterClass="fileItemVO">
      <selectKey keyProperty="file_no">
         SELECT FILEITEM_SEQ.NEXTVAL FROM DUAL
      </selectKey>
      INSERT INTO FILEITEM (FILE_NO,
                       BOARD_INDEX,
                       BOARD_NO,
                       FILE_NAME,
                       FILE_SAVE_NAME,
                       FILE_TYPE)      values   (#file_no#,
                                          #board_index#,
                                          #board_no#,
                                           #file_name#,
                                           #file_save_name#,
                                           #file_type#)
   </insert>
   
   
   <!-- 한별 -->
	
	
	
	<insert id="insertFileitem" parameterClass="fileItemVO">
		<selectKey keyProperty="file_no">
			SELECT FILEITEM_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO FILEITEM(FILE_NO
							,BOARD_INDEX
							,BOARD_NO
							,FILE_NAME
							,FILE_SAVE_NAME
							,FILE_REG_DATE
							,FILE_TYPE
						)
					VALUES(#file_no#
							,1
							,#board_no#
							,#file_name#
							,#file_save_name#
							,sysdate
							,#file_type#
						)
		
	</insert>
	
	<insert id="insertSumnailFileitem" parameterClass="fileItemVO">
		<selectKey keyProperty="file_no">
			SELECT FILEITEM_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO FILEITEM(FILE_NO
							,BOARD_INDEX
							,BOARD_NO
							,FILE_NAME
							,FILE_SAVE_NAME
							,FILE_REG_DATE
							,FILE_TYPE
						)
					VALUES(#file_no#
							,5
							,#board_no#
							,#file_name#
							,#file_save_name#
							,sysdate
							,#file_type#
						)
		
	</insert>
	
	
	<statement id="fileitemList" resultClass="fileItemVO">
		SELECT *
		FROM FILEITEM
		WHERE BOARD_NO = #board_no#
	</statement>
	
	
	
	
	<!-- qna 한별 -->
